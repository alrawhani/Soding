@model DateTime?
<div class="container">
    <div class="row">
        <div class='col-sm-4'>
            <div class="form-group">
                <div class='input-group date'>
                    @Html.TextBox("", (Model.HasValue ?
                       Model.Value.ToShortDateString() :
                       string.Empty), new
                       {
                           @class = "form-control"
                       })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
